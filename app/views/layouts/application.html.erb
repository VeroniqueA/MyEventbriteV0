<!DOCTYPE html>
<html>
<head>
  <title>Thpeventbrite</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

  <!-- navbar -->
  <nav class="navbar navbar-expand-md navbar-dark bg-dark" style="background-color: #e3f2fd;">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">

        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" <%= link_to "Accueil", root_path %> </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" <%= link_to "Créer en événement" %></a>
          </li>
        </ul>

        <% if user_signed_in? %>
        <ul class="navbar-nav mr-auto">
          <li> <%= current_user.first_name %> <%= current_user.last_name %> </li>
        </ul>
        <% end %>

        <ul class="navbar-nav mr-rg">
        <form class="form-inline my-2 my-lg-0">
          <% if user_signed_in? %>
          <li class="nav-item">
            <a class="nav-link" <%= link_to "Mon profil", user_path(current_user.id) %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" <%= link_to('Se déconnecter', destroy_user_session_path, method: :delete) %></a>
          </li>
         <% else %>
         <li class="nav-item">
           <a class="nav-link" <%= link_to "S'inscrire",  new_user_registration_path %></a>
         </li>
         <li class="nav-item">
           <a class="nav-link" <%= link_to "Se connecter", new_user_session_path %></a>
         </li>
         <% end %>
        </form>
        </ul>

      </div>
    </nav>
  </head>

  <body>

    <%= yield %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    
  </body>
</html>